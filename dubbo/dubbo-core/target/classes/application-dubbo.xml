<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">
    
    <dubbo:application name="${dubbo.application}"/>
    <dubbo:registry address="${dubbo.registry}"/>
    <dubbo:provider retries="1" timeout="${dubbo.timeout}" connections="2"/>
    <dubbo:protocol name="dubbo" port="-1"/>
    <dubbo:monitor protocol="registry"/>
    <dubbo:consumer timeout="${dubbo.timeout}" />

    <bean id="userService" class="cn.moyada.dubbo.test.core.UserServiceImpl"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="cn.moyada.dubbo.test.api.UserService" ref="userService"/>
</beans>